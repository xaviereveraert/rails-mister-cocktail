<div class="container">
  <div class="row">
    <div class="col">
      <h2>
        <%= @cocktail.name %>
      </h2>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> of <%= dose.ingredient.name %>
        </li>
        <% end %>
      </ul>
      <br>
      <%= link_to "add a new dose to this cocktail", new_cocktail_dose_path(@cocktail)  %>
      <br>
    </div>
  </div>
</div>
